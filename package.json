{
  "name": "evenica-e4dynamics-elasticsearch",
  "version": "1.0.0",
  "description": "Elasticsearch Index Management API for E4Dynamics products - TypeScript/Node.js version",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "tester": "ts-node src/tester/program.ts",
    "api": "ts-node src/api/server.ts",
    "test:blue-green": "ts-node src/tester/blueGreenTest.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.0",
    "@koa/cors": "^5.0.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-mount": "^4.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/swagger-ui-dist": "^3.30.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-csp": "^1.2.6",
    "koa-helmet": "^8.0.1",
    "koa-mount": "^4.2.0",
    "koa-router": "^8.0.8",
    "koa2-swagger-ui": "^5.11.0",
    "readline": "^1.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "testTimeout": 60000
  }
}
